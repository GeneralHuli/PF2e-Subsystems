<section class="dc-section">
    <label for="dc">DC:</label>
    {{#if action.editable}}
        <input data-id="DC" name="actions.{{type}}.{{action.id}}.DC" type="number" value="{{action.DC}}">
    {{else}}
        <div data-id="DC">{{action.DC}}</div>
    {{/if}}
</section>

<section class="description-section">
    {{#if action.editable}} 
        <prose-mirror name="actions.{{type}}.{{action.id}}.description" value="{{action.description}}" toggled="true">
        {{{lookup (lookup (lookup enrichedContent.actions type) action.id) 'description'}}}
        </prose-mirror>
    {{else}} {{{lookup (lookup (lookup enrichedContent.actions type) action.id) 'description'}}}
    {{/if}}
</section>
